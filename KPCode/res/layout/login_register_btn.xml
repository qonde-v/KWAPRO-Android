<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlBottom"
    android:layout_width="fill_parent"
    android:layout_height="46dp"
    android:background="@drawable/bottom_bg" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlbtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/imgRegister_btm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/zhuce" />

            <Button
                android:id="@+id/btnRegister_btm"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/imgRegister_btm"
                android:background="#00000000"
                android:text="@string/strRegister"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlbtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/imgLogin_btm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/denglu" />

            <Button
                android:id="@+id/btnLogin_btm"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/imgLogin_btm"
                android:background="#00000000"
                android:text="@string/strLogin"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>